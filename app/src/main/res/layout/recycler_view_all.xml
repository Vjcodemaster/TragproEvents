<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop_rv_medium"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_rv"
        android:paddingTop="@dimen/padding_rv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <library.CircleImageView
                    android:id="@+id/all_rc_avatar"
                    android:layout_width="@dimen/circle_width"
                    android:layout_height="@dimen/circle_height"
                    android:layout_marginEnd="@dimen/layout_margin_rv_medium"
                    android:layout_marginStart="@dimen/layout_margin_rv_medium"/>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                <TextView
                    android:id="@+id/all_rc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/grey"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/all_rc_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:textAppearanceSmallInverse"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_rv_default"/>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_gravity="end"
                          android:orientation="vertical">


                <TextView
                    android:id="@+id/all_rc_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_rv_default"/>

                <TextView
                    android:id="@+id/all_rc_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_rv_default"/>

                <TextView
                    android:id="@+id/all_rc_last_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:drawablePadding="@dimen/rv_drawablePadding_medium"
                    android:drawableStart="@drawable/tp_time_icon"
                    android:gravity="center"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_rv_default"/>

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tp_mail_icon"/>-->


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_margin_rv_large"
            android:layout_marginTop="@dimen/layout_marginTop_rv_small"
            android:gravity="end"
            android:orientation="horizontal">

            <!--blank view-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>

            <TextView
                android:id="@+id/all_rc_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight=".17"
                android:drawablePadding="@dimen/rv_drawablePadding_small"
                android:drawableStart="@drawable/tp_call_icon"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_rv_small"/>

            <View
                android:layout_width="@dimen/view_rv_width"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/layout_margin_rv_small"
                android:layout_marginStart="@dimen/layout_margin_rv_small"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/all_rc_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".17"
                android:drawablePadding="@dimen/rv_drawablePadding_medium"
                android:drawableStart="@drawable/tp_mail_icon"
                android:gravity="center"
                android:maxLines="3"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_rv_small"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>