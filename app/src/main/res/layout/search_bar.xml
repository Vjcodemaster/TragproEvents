<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ib_search_go_back"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/layout_search_bar_margin_small"
        android:layout_marginEnd="@dimen/layout_search_bar_margin_medium"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/app_name"
        android:src="@drawable/grey_arrow"/>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:inputType="text"
        android:hint="Search Products, People, Events, Booths, Sessions etc"
        android:imeOptions="actionSearch" />

</LinearLayout>